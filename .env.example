PORT=3000
# URL de webhook de n8n para eventos entrantes (opcional)
N8N_WEBHOOK_URL=
# Clave opcional para proteger endpoints puente (x-bridge-key o ?key=)
BRIDGE_KEY=

# ===== Configuración IA (ChatGPT/Gemini) =====
# Proveedor: openai o gemini
LLM_PROVIDER=openai
# OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
# Gemini (Google)
GOOGLE_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
# Prompt del sistema (si se deja vacío, usa PROMPT.md)
SYSTEM_PROMPT=
# Ruta a archivo con prompt (opcional), relativa al directorio server
SYSTEM_PROMPT_FILE=PROMPT.md
# Respuesta automática de IA a mensajes entrantes
AUTOREPLY_ENABLED=false
# Temperatura de la IA (0.0 - 1.0)
LLM_TEMPERATURE=0.7

# ===== Estabilidad de conexión WhatsApp (Baileys) =====
# Si true, marca 'online' automáticamente al conectar
WA_MARK_ONLINE=false
# Timeout por defecto de queries internas (ms)
WA_DEFAULT_QUERY_TIMEOUT_MS=45000
# Timeout de conexión inicial (ms)
WA_CONNECT_TIMEOUT_MS=45000
# Retardo de reintentos internos (ms)
WA_RETRY_REQUEST_DELAY_MS=2000

# ===== Notificación de emparejamiento =====
# Número de WhatsApp (E.164, sin '+') que recibirá notificación
# cuando se genere el código de emparejamiento.
ADMIN_NOTIFY_PHONE=